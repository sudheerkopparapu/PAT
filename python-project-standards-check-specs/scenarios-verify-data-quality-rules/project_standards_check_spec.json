/* This file is the descriptor for the Custom python Project Standards Check template scenarios-verify-data-quality-rules */
{
  "meta": {
    "label": "Scenario must have data quality rules",
    "description": "Check that all input, output and published datasets have data quality rules checked in a scenario",
    "icon": "fas fa-check-circle"
  },
  "tags": ["AUTOMATION"],
  "params": [
      {
          "name": "datasets_to_consider",
          "label": "Datasets to Consider",
          "type": "MULTISELECT",
          "selectChoices" : [
              { "value": "input", "label": "Input Datasets"},
              { "value": "output", "label": "Output Datasets"},
              { "value": "shared", "label": "Shared Datasets"}
          ],
          "defaultValue" : ["input", "output", "shared"],
          "mandatory": true
      },
      {
          "name": "coverage",
          "label": "Coverage % [0 to 100]",
          "type": "INT",
          "defaultValue" : 90,
          "mandatory": true
      },
      {
          "name": "severity",
          "label": "Severity level",
          "type": "SELECT",
          "selectChoices" : [
              { "value": "1", "label": "LOWEST"},
              { "value": "2", "label": "LOW"},
              { "value": "3", "label": "MEDIUM"},
              { "value": "4", "label": "HIGH"},
              { "value": "5", "label": "CRITICAL"}
          ],
          "defaultValue" : "3",
          "mandatory": true
      }
  ]
}
