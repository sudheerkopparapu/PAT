    {
      "name": "medium",
      "label": "Medium Criticality Threshold",
      "description": "Medium criticality percentage of SQL script needing reformatting",
      "type": "INT",
      "defaultValue": 20
    },
    {
      "name": "high",
      "label": "High Criticality Threshold",
      "description": "High criticality percentage of SQL script needing reformatting",
      "type": "INT",
      "defaultValue": 40
    },
    {
      "name": "critical",
      "label": "Critical Criticality Threshold",
      "description": "Critical criticality percentage of SQL script needing reformatting",
      "type": "INT",
      "defaultValue": 80
