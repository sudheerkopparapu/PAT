        {
            "name": "intermediate_dataset_connection_type",
            "label": "Intermediate dataset connection type",
            "description": "Choose a dataset type to which you would like your datasets to conform",
            "type": "SELECT",
            "selectChoices": [
                {
                    "value": "Filesystem",
                    "label": "Filesystem"
                },
                {
                    "value": "S3",
                    "label": "S3"
                },
                {
                    "value": "Azure",
                    "label": "Azure Blob Storage"
                },               
                                {
                    "value": "GCS",
                    "label": "Google Cloud Storage"
                },
                {
                    "value": "SharePointOnline",
                    "label": "SharePoint"
                },
                {
                    "value": "PostgreSQL",
                    "label": "PostgreSQL"
                },
                {
                    "value": "Snowflake",
                    "label": "Snowflake"
                },
                {
                    "value": "Databricks",
                    "label": "Databricks"
                },
                {
                    "value": "MySQL",
                    "label": "MySQL"
                },
                {
                    "value": "SQLServer",
                    "label": "SQLServer"
                },
                {
                    "value": "BigQuery",
                    "label": "BigQuery"
                },
                {
                    "value": "Redshift",
                    "label": "Redshift"
