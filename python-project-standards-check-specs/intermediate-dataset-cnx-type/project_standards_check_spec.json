/* This file is the descriptor for the Custom python Project Standards Check template flow-size */
{
    "meta": {
        "label": "Intermediate dataset connection must have a specific connection type",
        "description": "Check that intermediate datasets conform to a pre-selected connection type",
        "icon": "fas fa-check-circle"
    },
    "tags": [
        "FLOW"
    ],
    "params": [
        {
            "name": "include_output_datasets",
